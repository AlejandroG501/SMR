<!DOCTYPE html>
<head>
    <meta charset="UTF-8">J-cç´r6`9p8
    <title>Calculadora</title>
</head>
<body>
    <h2>Calculadora</h2>
    
    <input type="number" id="numero1" placeholder="Primer número" step="any">
    <br><br>
    
    <select id="operacion">
        <option value="">Selecciona operación</option>
        <option value="+">Suma</option>
        <option value="-">Resta</option>
        <option value="*">Multiplicación</option>
        <option value="/">División</option>
    </select>
    <br><br>
    
    <input type="number" id="numero2" placeholder="Segundo número" step="any">
    <br><br>
    
    <button onclick="calcular()">Calcular</button>
    
    <br><br>
    <h3 id="resultado"></h3>

    <script>
        function calcular() {
            var num1 = parseFloat(document.getElementById('numero1').value);
            var num2 = parseFloat(document.getElementById('numero2').value);
            var op = document.getElementById('operacion').value;
            var resultado;
            
            if (isNaN(num1) || isNaN(num2)) {
                document.getElementById('resultado').innerHTML = 'Por favor ingresa ambos números';
                return;
            }
            
            if (op === '') {
                document.getElementById('resultado').innerHTML = 'Por favor selecciona una operación';
                return;
            }
            
            if (op === '+') {
                resultado = num1 + num2;
            } else if (op === '-') {
                resultado = num1 - num2;
            } else if (op === '*') {
                resultado = num1 * num2;
            } else if (op === '/') {
                if (num2 === 0) {
                    document.getElementById('resultado').innerHTML = 'Error: No se puede dividir entre cero';
                    return;
                }
                resultado = num1 / num2;
            }
            
            document.getElementById('resultado').innerHTML = 'Resultado: ' + resultado;
        }
    </script>
</body>
</html>